<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/day0"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/weekday_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/forecastday_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/sunny_day" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/day1"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/weekday_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/forecastday_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/sunny_day" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/day2"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/weekday_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/forecastday_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/sunny_day" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/day3"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/weekday_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/forecastday_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/sunny_day" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/day4"
            android:layout_width="58dp"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/weekday_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/forecastday_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/sunny_day" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/day5"
            android:layout_width="59dp"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/weekday_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/forecastday_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/sunny_day" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/day6"
            android:layout_width="59dp"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/weekday_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/forecastday_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/sunny_day" />
        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/startRunning"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="startRunPressed"
        android:text="@string/mainactivity_button_start_running"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/mainactivity_textview_run_suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/reload_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="grant permission to see forecast"
        android:visibility="gone"
        android:onClick="updateForecast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

</androidx.constraintlayout.widget.ConstraintLayout>